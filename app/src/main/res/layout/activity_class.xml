<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <View
        android:id="@+id/blackOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.9" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/classbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        android:elevation="4dp"/>

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/attributeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "@string/attribute"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/vigorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/mindText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/enduranceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/strenghtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dexterityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/intelligenceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/fiathText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/arcaneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/classImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        </ImageView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>