<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <View
            android:id="@+id/blackOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.9" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/gold"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/toolbarBackGround"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/backGround"
            android:scaleX="0.98"
            android:scaleY="0.90"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/custom_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/classes"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:src="@drawable/paper"
                android:scaleType="fitCenter"
                android:contentDescription="Classes" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/buttonBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gold"
                    android:alpha="0.5" />

                <ImageButton
                    android:id="@+id/map"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@null"
                    android:src="@drawable/map"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:contentDescription="Map" />
            </FrameLayout>
            
            <ImageButton
                android:id="@+id/item"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:src="@drawable/sword"
                android:scaleType="fitCenter"
                android:contentDescription="Item" />

            <ImageButton
                android:id="@+id/boss"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:src="@drawable/rune"
                android:scaleType="fitCenter"
                android:contentDescription="Boss" />

            <ImageButton
                android:id="@+id/chat"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:src="@drawable/ring"
                android:scaleType="fitCenter"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@null"
                android:contentDescription="Profile"
                android:scaleType="fitCenter"
                android:src="@drawable/setting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="20dp">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gold"
                        android:scaleX="0.37">
                    </View>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lingrave"
                        android:layout_gravity="center"
                        android:layout_margin="5dp">
                    </ImageView>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:src="@drawable/skull">
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boss"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center">
                    </TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:src="@drawable/pergamine">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pergamine"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center">
                    </TextView>
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:src="@drawable/armor">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/armor"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center">
                    </TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:src="@drawable/lance">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center">
                    </TextView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:src="@drawable/talismane">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/talismane"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:layout_marginStart="45dp"
                        android:layout_gravity="center">
                    </TextView>
                </FrameLayout>


            </LinearLayout>


        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>